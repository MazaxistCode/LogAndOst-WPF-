<Window x:Class="LogAndOst_WPF_.Employees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogAndOst_WPF_"
        mc:Ignorable="d"
        Title="Employees" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBox x:Name="SearchBox" Margin="10,10,10,0" TextChanged="SearchBox_TextChanged"></TextBox>
            <DataGrid x:Name="EmpList" Margin="10,10,10,50" Height="370" AutoGenerateColumns="False" SelectedCellsChanged="EmpList_SelectedCellsChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Gender" Binding="{Binding Genders.Name}"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Roles.Name}"/>
                    <DataGridTextColumn Header="Country" Binding="{Binding Countries.Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button x:Name="DeleteButton" Click="DeleteButton_Click" Height="30" Margin="10,10,10,0" Content="Удалить"></Button>
            <Label Content="Имя сотрудника" Margin="10,10,10,0"></Label>
            <TextBox x:Name="NameBox" Margin="10,0,10,0"></TextBox>
            <Label Content="Пол сотрудника" Margin="10,10,10,0"></Label>
            <ComboBox x:Name="GenderBox" Margin="10,0,10,0"></ComboBox>
            <Label Content="Роль сотрудника" Margin="10,10,10,0"></Label>
            <ComboBox x:Name="RoleBox" Margin="10,0,10,0"></ComboBox>
            <Label Content="Страна сотрудника" Margin="10,10,10,0"></Label>
            <ComboBox x:Name="CountryBox" Margin="10,0,10,0"></ComboBox>
            <Button x:Name="CreateButton" Click="CreateButton_Click" Margin="10" Height="30" Content="Создать"></Button>
            <Button x:Name="EditButton" Click="EditButton_Click" Margin="10" Height="30" Content="Редактировать"></Button>
            <Button x:Name="ExitButton" Click="ExitButton_Click" Margin="10,10,10,10" Height="30" Content="Выход"></Button>
        </StackPanel>
    </Grid>
</Window>
