<Window x:Class="LogAndOst_WPF_.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogAndOst_WPF_"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Логин сотрудника" Margin="10,5,10,0" Width="250"></Label>
            <TextBox x:Name="LoginBox" Margin="10,0,10,0"></TextBox>
            <Label Content="Пароль сотрудника" Margin="10,5,10,0"></Label>
            <TextBox x:Name="PassBox" Margin="10,0,10,0"></TextBox>
            <Button x:Name="LogInButton" Click="LogInButton_Click" Margin="10,10,10,0" Height="20" Content="Войти"></Button>
            <Button x:Name="LogOnButton" Click="LogOnButton_Click" Margin="10,10,10,0" Height="20" Content="Зарегистрироваться"></Button>
        </StackPanel>
    </Grid>
</Window>
