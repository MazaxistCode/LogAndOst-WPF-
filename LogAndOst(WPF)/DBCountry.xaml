<Window x:Class="LogAndOst_WPF_.DBCountry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogAndOst_WPF_"
        mc:Ignorable="d"
        Title="DBCountry" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGrid" Margin="10,10,10,50" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Country" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="DeleteCountry" VerticalAlignment="Bottom" Margin="10" Height="30" Content="Удалить страну" Click="DeleteCountry_Click"></Button>
    </Grid>
</Window>
